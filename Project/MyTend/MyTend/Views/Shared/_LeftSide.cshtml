                        {
                            <span class="label label-warning">+ @this.ViewBag.ActiveCount</span>
                        }
                    </a>
                </li>
                <li>
                    <a href="~/tender/list" aria-expanded="false">
                        <span class="sidebar-nav-item"><strong>Мои Предложения</strong></span>
                    </a>
                </li>
                <li>
                    <a href="~/tender/winner" aria-expanded="false">
                        <span class="sidebar-nav-item"><strong>Победы </strong></span>
                        @if (this.ViewBag.WinnerCount > 0)
                        {
                            <span class="label label-warning">+ @this.ViewBag.WinnerCount</span>
                        }
                    </a>
                </li>
                <li>
                    <a href="~/pay/index" aria-expanded="false">
                        <span class="sidebar-nav-item"><strong>Оплата Доступа </strong></span>
                    </a>
