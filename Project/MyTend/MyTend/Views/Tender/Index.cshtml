@model MyTend.Models.ListThemeTenderModel
@{
    ViewBag.Title = "У Вас скоро праздничное событие? Разместите свой заказ на Аукционе событий!";
    var max = Model.Themes.Count() - 1;
    var i = 0;
    var itemI = 0;
}
<div class="form-group" style="text-align: center">
    <div style="font-style: italic; text-align: center;">Реклама</div>
    <a href="https://my-tend.com/Account/Card?user=olegromanov2010@gmail.com" target="_blank">
        <img src="~/Content/images/dj_kazan.png" style="width: 80%" />
	 <h5><strong>DJ в Казани! </strong>Свежие хиты, отбивки, музыка для конкурсов. Озвучим свадьбы, юбилеи, корпоративы, промо-акции! </h5>
    </a>  </div>
<br />
<h2 style="color: #000000;"><STRONG>Аукцион событий и праздника My-Tend.Com</STRONG></h2>
<h5 style="color: #777777;">Разместите свой праздничный заказ на Май-Тенд, ведь тут им заинтересуются десятки нужных для Вас
 исполнителей Вашего города.</h5>


<!-- Put this script tag to the <head> of your page -->
<script type="text/javascript" src="//vk.com/js/api/openapi.js?152"></script>

<script type="text/javascript">
  VK.init({apiId: 6365308, onlyWidgets: true});
</script>

<!-- Put this div tag to the place, where the Like block will be -->
<div id="vk_like"></div>
<script type="text/javascript">
VK.Widgets.Like("vk_like", {type: "mini", verb: 1},12345);
</script>
<div style="text-align: center;">
    
           <div class="title-line">Выберите услугу</div>
  
</div>

<div class="tenderRow" style="padding-top:10px">
    <div class="form-group" style="text-align: center">
        
    </div>

    @foreach (var item in Model.Themes)
    {
        if (i == 0)
        {
            @:<div class="row">
        }

        <div class="text-center">
            <div class="col-md-4">
                <div style="margin: auto;background-size: cover; width: 180px; height: 180px; background-image:url(../Content/images/kats2/@item.ImageName);">
                    <a href="~/Tender/Create?id=@item.Id"><img src="~/Content/images/kats2/@item.ImageName2" class="tenderImg" width="180" height="180" /></a>
                </div>
                <p>
                    <h5>@Html.ActionLink(item.Theme, "Create", "Tender", new { @id = item.Id }, new { @style = "", @class = "no_line" })</h5>
                </p>
            </div>
        </div>

        if (i == 2 || itemI == max)
        {
            @:</div>
        }

        if (i == 2)
        {
            i = 0;
        }
        else
        {
            i++;
        }

        itemI++;
    }
</div>
<br /><br />