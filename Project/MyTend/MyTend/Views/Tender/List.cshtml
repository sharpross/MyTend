@model MyTend.Models.ActiveTenderListModel

@{
    ViewBag.Title = "Мои предложения заказчикам";
}
<br />
<h3 style="color: #222222;">Мои предложения заказчикам</h3>
<h5 style="color: #555555;">Аукционные торги, в которых Вы принимаете участие как исполнитель услуг.</h5><br />
<h6 style="color: #555555;">Регулярно проверяйте то, что предлагают Ваши конкуренты, быть может Вы сделаете более выгодное предложение для заказчика и он выберет именно Вас!</h6>

<div class="tabs">
       <ul class="nav nav-tabs nav-justified">
        <li class="active"><a href="#tab5-1" data-toggle="tab" style="text-decoration: none; border-radius: 10px 00px 0px 10px;">Идет выбор исполнителя заявки</a></li>
        <li class=""><a href="#tab5-2" data-toggle="tab" style="text-decoration: none; border-radius: 0px 10px 10px 0px;">Победитель заявки выбран/Заявка закрыта</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="tab5-1">
            @if (Model.OpenTenders.Count > 0)
            {
                foreach (var item in Model.OpenTenders)
                {
                    <div class="row" id="tenderrow-@item.Id">
                        <div class="col-lg-2" style="text-align: center">
                            <a href="~/Tender/Details?id=@item.Id">
                                <img src="~/Content/images/kats/@item.Theme.ImageName" width="90" height="100" />
                            </a>
                        </div>
                        <div class="col-lg-10">
                            <table style="width: 100%">
                                <tr>
                                    <td style="padding-left: 10px;">
                                        <h4> @Html.ActionLink(item.Title, "Details", "Tender", new { id = item.Id }, null) </h4>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding-left: 10px;">
                                        @if (item.Cost == 0)
                                        {
                                            @:<div><p style="word-wrap: break-word; font-size: 17px;">Договорная</div>
                                    }
                                        else
                                        {
                                            @:<div><p style="font-size:17px">@item.Cost.ToString("0.00") руб.</p></div>
                                    }
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding-left: 10px;">
                                        <div style="color: #858585; line-height: 18px;">
                                            @item.Theme.Title <br />
                                            @item.City.Name <br />
                                            @string.Format("Рассмотрение предложений: c " + item.CreatedDateTime.ToString("dd.MM.yyyy") + " до " + item.DateEnd.ToString("dd.MM.yyyy"))
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding-left: 10px; text-align: right;">
                                        <a href="#" style="color: #ff0000;" onclick="hideTender(@item.Id)"><i class="glyphicon glyphicon-remove" style="color: #ff0000;"></i>Удалить</a>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                }
            }
            else
            {
                <div>
                    На данный момент вы не принимаете участия в конкурсах/аукционных-торгах.
                </div>
            }
            
        </div>
        <div class="tab-pane" id="tab5-2">
            @if (Model.CloseTenders.Count > 0)
            {
                foreach (var item in Model.CloseTenders)
                {
                    <div class="row" id="tenderrow-@item.Id">
                        <div class="col-lg-2" style="text-align: center">
                            <a href="~/Tender/Details?id=@item.Id">
                                <img src="~/Content/images/kats/@item.Theme.ImageName" width="90" height="100" />
                            </a>
                        </div>
                        <div class="col-lg-10">
                            <table style="width: 100%">
                                <tr>
                                    <td style="padding-left: 10px;">
                                        <h4> @Html.ActionLink(item.Title, "Details", "Tender", new { id = item.Id }, null) </h4>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding-left: 10px;">
                                        @if (item.Cost == 0)
                                        {
                                            @:<div><p style="word-wrap: break-word; font-size: 17px;">Договорная</div>
                                    }
                                        else
                                        {
                                            @:<div><p style="font-size:17px">@item.Cost.ToString("0.00") руб.</p></div>
                                    }
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding-left: 10px;">
                                        <div style="color: #858585; line-height: 18px;">
                                            @item.Theme.Title <br />
                                            @item.City.Name <br />
                                            @string.Format("Рассмотрение предложений: c " + item.CreatedDateTime.ToString("dd.MM.yyyy") + " до " + item.DateEnd.ToString("dd.MM.yyyy"))
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding-left: 10px; text-align: right;">
                                        <a href="#" style="color: #ff0000;" onclick="hideTender(@item.Id)"><i class="glyphicon glyphicon-remove" style="color: #ff0000;"></i>Удалить</a>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                }
            }
            else
            {
                <div>
                   На данный момент вы не принимаете участия в конкурсах/аукционных-торгах.
                </div>
				
            }
        </div>
    </div>
</div>