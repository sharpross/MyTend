@model Dictionary<string, List<MyTend.Entites.TenderTheme>>

@{
    ViewBag.Title = "Карта аукционных торгов";
}
<br />
<h1 style="color: #000000;"><STRONG> Карта конкурсных торгов</STRONG></h1>
<h5 style="color: #777777;">Категории  и темы конкурсных торгов, которые 
				помогут найти лучшее предложение и исполнителя, для Вашего праздника! </h5>
				 <br />




		 <div class="row">
            <div class="col-md-2"><img src="~/Content/images/kompas.svg" width="100"" height="100"" /></div>
            <div class="col-md-8" style="line-height:20px">
                
                <div style="font-size: 15px;">	
                
@foreach (var item in Model)
{
    var aa = item.Value.First();

    <div class="row">
        <div class="col-lg-12">
            <h4><br />
                @Html.ActionLink(item.Key, "Create", "Tender", new { @id = aa.Id }, new { @style = "color: #07a7fa;" })
            </h4>

            @foreach (var sub in item.Value)
            {
                
				<div>
                    @if (sub.IsTitle)
                    {
                        <div style="color: #dc0b29; font-weight: bold;">
                            @sub.Title
                        </div>
                    }
                    else
                    {
                        @sub.Title
                    }
                </div>
            }
        </div>
    </div>
}

 </div> </div> </div>
				 
				 <br />
