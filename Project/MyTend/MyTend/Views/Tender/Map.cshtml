@model Dictionary<string, List<MyTend.Entites.TenderTheme>>

@{
    ViewBag.Title = "Карта аукционных торгов";
}
<br />
<h3>Карта конкурсных-торгов</h3>


<br />

		 <div class="row">
            <div class="col-md-1"><img src="~/Content/images/vedushiy.svg" width="60"" height="60"" /></div>
            <div class="col-md-11" style="line-height:20px">
                <div style=" font-size: 15px;">Категории  и темы конкурсных-торгов, которые  помогут найти лучшего, на ваш взгляд исполнителя и предложение для Вашего праздника! </div>
                <div style="font-size: 14px;">	 <br />
                
@foreach (var item in Model)
{
    var aa = item.Value.First();

    <div class="row">
        <div class="col-lg-12">
            <h4><br />
                @Html.ActionLink(item.Key, "Create", "Tender", new { @id = aa.Id }, new { @style = "color: #07a7fa;" })
            </h4>

            @foreach (var sub in item.Value)
            {
                
				<div>
                    @if (sub.IsTitle)
                    {
                        <div style="color: rgb(204, 0, 1); font-weight: bold;">
                            @sub.Title
                        </div>
                    }
                    else
                    {
                        @sub.Title
                    }
                </div>
            }
        </div>
    </div>
}

 </div> </div> </div>
				 
