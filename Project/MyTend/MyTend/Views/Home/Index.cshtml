                    </div>
                <p>
                   <h5 style="color: #000000;">@Html.ActionLink(item.Theme, "Create", "Tender", new { @id = item.Id }, new { @style = "", @class = "no_line" })</h5>
                </p>
            </div>
        </div>

        if (i == 2 || itemI == max)
        {
            @:</div>
        }

        if (i == 2)
        {
            i = 0;
        }
        else
        {
            i++;
        }

        itemI++;
    }
